<section class="cart py-16">
    <% if(session.cart) { %>
        <div class="order container mx-auto xl:w-1/2">
            <div class="flex items-center border-b border-gray-300 pb-4">
                <img src="/img/cart-black.png" alt="">
                <h1 class="font-bold ml-4 text-2xl">Order Summary</h1>
            </div>
            <div class="pizza-list">
                <% for(let pizza of Object.values(session.cart.items)) { %>
                    <div class="flex items-center my-8">
                        <img class="w-24" src="/img/<%= pizza.item.image %>" alt="">
                        <div class="flex-1 ml-4">
                            <h1>
                                <%= pizza.item.name %>
                            </h1>
                            <span>
                                <%= pizza.item.size %>
                            </span>
                        </div>
                        <span class="flex-1">
                            <%= pizza.qty %> Pcs
                        </span>
                        <span class="font-bold text-lg"><%= pizza.item.size %></span>
                    </div>
                    <% } %>

            </div>
                <% if(user) { %>
                    <div>
                        <form action="/orders" method="POST" class="mt-12" id="payment-form">
                            <div class="relative w-1/2 ml-auto mb-4">
                            </div>
                            <input name="phone" class="border border-gray-400 p-2 w-1/2 mb-4" type="text"
                                placeholder="Phone number">
                            <input name="address" class="border border-gray-400 p-2 w-1/2" type="text"
                                placeholder="Address">
                            <input name="pickup-point" class="border border-gray-400 p-2 w-1/2 mt-4" type="text" placeholder="Pickup Point">
                            <input name="drop-point" class="border border-gray-400 p-2 w-1/2 mt-4" type="text" placeholder="Drop Point">
                            <div class="mt-4">
                                <div id="card-element"></div>
                                <button class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-6"
                                    type="submit">Request Drone</button>
                            </div>
                        </form>
                    </div>
                    <% } else { %>
                        <a href="/login"
                            class="inline-block cursor-pointer btn-primary px-6 py-2 rounded-full text-white font-bold mt-6">Login
                            to continue</a>
                        <% } %>
            </div>
        </div>
        <% } else { %>
            <div class="empty-cart py-16">
                <div class="container mx-auto text-center">
                    <h1 class="text-3xl font-bold mb-2">Cart Empty ðŸ˜•</h1>
                    <p class="text-gray-500 text-lg mb-12">You probably haven't ordered a  yet. <br>
                        To order go to the main page.</p>
                    <img class="w-2/5 mx-auto" src="/img/empty-cart.png" alt="empty-cart">
                    <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12">Go
                        back</a>
                </div>
            </div>
            <% } %>
</section>