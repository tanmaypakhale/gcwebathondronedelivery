<section class="hero py-16">
    <div class="container mx-auto flex items-center justify-between">
        <div class="w-1/2">
            <h6 class="text-lg"><em>Wanna Capture the World?</em></h6>
            <h1 class="text-3xl md:text-6xl font-bold">Get Ready to Fly</h1>
            <!-- <button class="px-6 py-2 rounded-full text-white font-bold mt-4 btn-primary">Order Now</button> -->
        </div>
        <div class="w-1/2">
            <img src="/img/dronebg.jpeg" alt="">
        </div>
    </div>
</section>
<section class="menu container mx-auto py-8">
    <h1 class="text-xl font-bold mb-8">Drone Wardrobe</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 col-gap-12 row-gap-16">
        <% drones.forEach(function(drone) { %>
        <div class="w-full md:w-64">
            <img class="h-40 mb-4 mx-auto" src="/img/<%= drone.image %>" alt="">
            <div class="text-center">
                <h2 class="mb-4 text-lg"><%= drone.name %></h2>
                <span class="size py-1 px-4 rounded-full uppercase text-xs"><%= drone.size %></span>
                <div class="flex items-center justify-around mt-6">
                    <button data-pizza="<%= JSON.stringify(drone) %>"
                        class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                        <span>+</span>
                        <span class="ml-4">Request</span>
                    </button>
                </div>
            </div>
        </div>
        <% }) %>

    </div>
</section>